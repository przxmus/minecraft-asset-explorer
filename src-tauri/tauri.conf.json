{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Minecraft Asset Explorer",
  "version": "0.1.1",
  "identifier": "dev.przxmus.mae",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Minecraft Asset Explorer",
        "width": 800,
        "minWidth": 1000,
        "height": 600,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "bundleName": "Minecraft Asset Explorer"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
